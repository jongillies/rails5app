<%- model_class = Post -%>
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Posts
        <small>Subheading</small>
      </h1>
      <ol class="breadcrumb">
        <li><%= link_to 'Home', root_path %>
        </li>
        <li class="active">Full Width Page</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->
  <%= search_form_for @search, :url => posts_path, :html => {:class => "form-inline"} do |f| %>
      <%= f.text_field :name_cont, class: "string form-control" %>
      <%= f.submit "Search", :name => nil, :class => "btn btn-primary" %>
      <%= link_to "Clear", eval("#{controller_name.pluralize}_path"), :class => "btn btn-primary", :id => :q_reset %>
      <% if can? :create, Post %>
          <%= link_to "New Post", new_post_path, :class => 'btn btn-primary pull-right', :id => "New" %>
      <% end %>
  <% end %>

  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= sort_link @search, :name, 'Name' %></th>
      <th><%= sort_link @search, :body, 'Body' %></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.name, post %></td>
          <td><%= link_to post.body, post %></td>
        </tr>
    <% end %>
    </tbody>

  </table>

  <%= paginate @posts %>

</div>